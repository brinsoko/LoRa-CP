      "delete": {
        "tags": ["teams"],
        "summary": "Delete team",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Deleted"
          },
          "409": {
            "description": "Conflict"
          }
        }
      }
    },
