            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "organization": {
                    "type": "string",
                    "description": "Rod / organization the team belongs to"
                  },
                  "number": {
                    "type": "integer"
                  },
                  "group_ids": {
                    "type": "array",
                    "items": {
                      "type": "integer"
                    }
                  },
                  "active_group_id": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
